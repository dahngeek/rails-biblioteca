<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @book.description %>
</p>

<p>
  <strong>Pages:</strong>
  <%= @book.pages %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author.name + " " + @book.author.lastname %>
</p>

<p>
  <strong>Topics:</strong>
  <ul>
  <% @book.topic.each do |t| %>
    <li><%= t.name %></li>
  <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_book_path(@book) %> |
